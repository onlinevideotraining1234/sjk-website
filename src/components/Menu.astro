<header class="flex flex-row p-2 justify-between md:justify-center bg-red-300">
  <div class="sjk-logo bg-blue-200">
    <a href="shinjyuku.mn" class="sjk-logo__link">
      <span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 22.68 22.68"
          class="w-4 h-4 fill-gray-700 hover:fill-gray-950"
          ><title>Asset 1</title><g id="Layer_2" data-name="Layer 2"
            ><g id="Layer_1-2" data-name="Layer 1"
              ><g id="Layer_2-2" data-name="Layer 2"
                ><g id="Layer_1-2-2" data-name="Layer 1-2"
                  ><path
                    d="M19.53,5s-5.91,10.17-14,13.9c0,0-3.16-12.69,17.14-18.94,0,0-1.88,21-15.29,20.06a3.91,3.91,0,0,1-1-.19,12.13,12.13,0,0,0,1.77-1.05C11.08,16.73,17.11,11.81,19.53,5Z"
                  ></path><path
                    d="M0,22.5l4.65-2.6s.28-.2.42.06a.32.32,0,0,1-.11.41H5L0,22.68Z"
                  ></path></g
                ></g
              ></g
            ></g
          ></svg
        >
      </span>
    </a>
  </div>
  <nav class="bg-gray-100">
    <!-- Hamburger Button -->
    <button
      class="block md:hidden text-gray-700 focus:outline-none"
      id="hamburger-button"
    >
      <div class="hamburger-lines">
        <span class="block w-6 h-0.5 bg-gray-700 mb-1"></span>
        <span class="block w-6 h-0.5 bg-gray-700 mb-1"></span>
        <span class="block w-6 h-0.5 bg-gray-700"></span>
      </div>
    </button>

    <!-- Menu -->
    <ul
      class="hidden md:flex items-center space-x-6 bg-gray-100 absolute md:relative top-14 left-0 w-full md:w-auto flex-col md:flex-row md:space-y-0 space-y-4 shadow-lg md:shadow-none p-4 md:p-0"
      id="menu"
    >
      <!-- Dropdown Menu -->
      <li class="relative">
        <button
          class="flex items-center justify-between w-full md:w-auto text-gray-700 hover:text-gray-900"
          id="dropdown-button"
        >
          UIS
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 ml-2 transition-transform md:hidden"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <ul
          class="hidden flex-col mt-2 space-y-2 bg-white shadow-lg rounded-lg p-4 md:absolute md:mt-0 md:w-48 md:p-2"
          id="dropdown-content"
        >
          <!-- Dropdown Items -->
          <li>
            <a href="#" class="flex items-center gap-2">
              <img
                src="/path-to-image1.jpg"
                alt="Item 1"
                class="w-12 h-12 object-cover rounded-md"
              />
              <div>
                <h3 class="text-sm font-medium">Item 1</h3>
                <p class="text-xs text-gray-500">More details</p>
              </div>
            </a>
          </li>
          <li>
            <a href="#" class="flex items-center gap-2">
              <img
                src="/path-to-image2.jpg"
                alt="Item 2"
                class="w-12 h-12 object-cover rounded-md"
              />
              <div>
                <h3 class="text-sm font-medium">Item 2</h3>
                <p class="text-xs text-gray-500">More details</p>
              </div>
            </a>
          </li>
          <li>
            <a href="#" class="flex items-center gap-2">
              <img
                src="/path-to-image3.jpg"
                alt="Item 3"
                class="w-12 h-12 object-cover rounded-md"
              />
              <div>
                <h3 class="text-sm font-medium">Item 3</h3>
                <p class="text-xs text-gray-500">More details</p>
              </div>
            </a>
          </li>
          <li>
            <a href="#" class="flex items-center gap-2">
              <img
                src="/path-to-image4.jpg"
                alt="Item 4"
                class="w-12 h-12 object-cover rounded-md"
              />
              <div>
                <h3 class="text-sm font-medium">Item 4</h3>
                <p class="text-xs text-gray-500">More details</p>
              </div>
            </a>
          </li>
        </ul>
      </li>

      <!-- Regular Menu Item -->
      <li>
        <a href="#" class="text-gray-700 hover:text-gray-900">Shinjyuku Care+</a
        >
      </li>
    </ul>
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburgerButton = document.getElementById("hamburger-button");
    const menu = document.getElementById("menu");
    const dropdownButton = document.getElementById("dropdown-button");
    const dropdownContent = document.getElementById("dropdown-content");

    // Hamburger Menu Toggle
    hamburgerButton.addEventListener("click", () => {
      menu.classList.toggle("hidden");
      menu.classList.toggle("flex");
    });

    // Dropdown Menu Toggle
    dropdownButton.addEventListener("click", () => {
      dropdownContent.classList.toggle("hidden");
      dropdownContent.classList.toggle("flex");
    });
  });
</script>
