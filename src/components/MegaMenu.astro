<style>
  .mega-box-uis,
  .mega-box-ct {
    opacity: 0;
    visibility: hidden;
    z-index: 1000;
    width: 100vw;
    position: absolute;
    left: 0;
    right: 0;
  }

  .nav-links .uis-link:hover .mega-box-uis {
    opacity: 1;
    visibility: visible;
  }

  .nav-links .ct-link:hover .mega-box-ct {
    opacity: 1;
    visibility: visible;
  }

  .nav {
    background: #f5f5f7;
    z-index: 1001;
  }

  .main-nav .btn {
    color: #fff;
    font-size: 20px;
    cursor: pointer;
    display: none;
  }
  .main-nav .btn.close-btn {
    position: absolute;
    right: 30px;
    top: 10px;
  }
  @media screen and (max-width: 768px) {
    .main-nav .btn {
      display: block;
      color: #242526;
    }
    .main-nav .nav-links {
      /* position: fixed; */
      position: absolute;
      /* height: max-content; */
      height: fit-content;
      overflow-y: visible;
      width: 100%;
      top: 0;
      left: -100%;
      background: #f5f5f7;
      display: block;
      padding: 50px 10px;
      line-height: 50px;
      /* overflow-y: auto; */
      box-shadow: 0px 15px 15px rgba(0, 0, 0, 0.18);
      transition: all 0.3s ease;
      z-index: 1000;
    }
    /* custom scroll bar */
    ::-webkit-scrollbar {
      width: 10px;
    }
    ::-webkit-scrollbar-track {
      background: #242526;
    }
    ::-webkit-scrollbar-thumb {
      background: #3a3b3c;
    }
    #menu-btn:checked ~ .nav-links {
      left: 0%;
    }
    #menu-btn:checked ~ .btn.menu-btn {
      display: none;
    }
    #close-btn:checked ~ .btn.menu-btn {
      display: block;
    }
    .nav-links li {
      margin: 15px 10px;
    }
    .nav-links li a {
      padding: 0 20px;
      display: block;
      font-size: 20px;
    }
    /* #showMega:checked ~ .nav-links {
      max-height: fit-content;
      z-index: 1000;
    } */

    .mega-box-uis,
    .mega-box-ct {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-in-out;
      position: relative;
      width: 100%;
    }

    /* #showMega-uis:checked ~ .mega-box-uis {
      max-height: fit-content;
    }

    #showMega-uis:checked ~ .mega-box-ct {
      max-height: 0;
    }

    #showMega-ct:checked ~ .mega-box-ct {
      max-height: fit-content;
    }

    #showMega-ct:checked ~ .mega-box-uis {
      max-height: 0;
    } */

