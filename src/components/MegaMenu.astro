  }
</style>

<script>
  document.querySelectorAll(".dropdown__button").forEach((button) => {
    button.addEventListener("click", (event) => {
      const target = event.target as HTMLElement; // Target элементийг тодорхойлох
      const currentDropdown = target.nextElementSibling as HTMLElement | null; // Dropdown элементийг тодорхойлох
      const allDropdowns = document.querySelectorAll<HTMLElement>(
        ".mega-box-uis, .mega-box-ct"
      );

      // Бүх цэсийг хаана
      allDropdowns.forEach((dropdown) => {
        if (dropdown !== currentDropdown) {
          dropdown.style.maxHeight = "0";
        }
      });

      // Хэрэв тухайн цэс байгаа бол нээх/хаах
      if (currentDropdown) {
        if (
          currentDropdown.style.maxHeight === "0px" ||
          !currentDropdown.style.maxHeight
        ) {
          currentDropdown.style.maxHeight = "fit-content";
        } else {
          currentDropdown.style.maxHeight = "0";
        }
      }
    });
  });
</script>
<script>
  window.addEventListener("resize", () => {
    const allDropdowns = document.querySelectorAll(
      ".mega-box-uis, .mega-box-ct"
    );

    if (window.innerWidth >= 768) {
      allDropdowns.forEach((dropdown) => {
        if (dropdown instanceof HTMLElement) {
          dropdown.style.maxHeight = "none"; // Desktop горимд хязгааргүй болгоно
          dropdown.style.overflow = "visible";
        }
      });
    } else {
      allDropdowns.forEach((dropdown) => {
        if (dropdown instanceof HTMLElement) {
          dropdown.style.maxHeight = "0"; // Mobile горимд хаалттай болгоно
          dropdown.style.overflow = "hidden";
        }
      });
    }
  });
</script>
