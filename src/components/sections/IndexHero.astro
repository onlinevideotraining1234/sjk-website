<style>
  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-image: url("/public/images/hero/index-hero.jpg");
    background-size: cover;
    background-position: center;
    padding: 60px 20px;
    height: 85vh;
  }

  .hero__title {
    color: #fff;
    margin-bottom: 20px;
  }

  .hero__subtitle {
    font-size: 1.2rem;
    color: #fff;
    margin-bottom: 40px;
    max-width: 600px;
  }

  .hero__button {
    display: inline-block;
    padding: 10px 20px;
    font-size: 1rem;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .hero__button:hover {
    background-color: #0056b3;
  }

  @media (max-width: 768px) {
    .hero__title {
      font-size: 1.5rem;
    }

    .hero__subtitle {
      font-size: 1rem;
    }

    .hero__button {
      font-size: 0.9rem;
      padding: 8px 16px;
    }
  }
</style>
