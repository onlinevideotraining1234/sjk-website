---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <section
    class="w-[100vw] min-h-screen flex items-center justify-center bg-gray-100"
  >
    <div class="block_contact-page w-full p-16">
      <h1
        class="block_contact-page__title text-4xl font-medium text-gray-800 mb-16 text-center"
      >
        Contact Us
      </h1>
      <div
        class="block_contact-page__content w-full flex flex-col md:flex-row justify-center"
      >
        <!-- Contact Details -->
        <div class="block_contact-page__details md:mr-16">
          <h2
            class="block_contact-page__subtitle text-xl font-semibold text-gray-700 mb-8"
          >
            Contact Info
          </h2>
          <ul class="block_contact-page__list">
            <li class="block_contact-page__item mb-2">
              <span class="block_contact-page__label font-medium text-gray-600"
                >Phone:</span
              >
              <a
                href="tel:976-77131133"
                class="block_contact-page__link text-blue-500 hover:underline"
                >976-7713 1133</a
              >
            </li>
            <li class="block_contact-page__item mb-2">
              <span class="block_contact-page__label font-medium text-gray-600"
                >Email:</span
              >
              <a
                href="mailto:info@shinjyuku.mn"
                class="block_contact-page__link text-blue-500 hover:underline"
                >info@shinjyuku.mn</a
              >
            </li>
            <li class="block_contact-page__item mb-2">
              <span class="block_contact-page__label font-medium text-gray-600"
                >Follow us:</span
              >
              <div class="block_contact-page__social-links flex mt-4">
                <a
                  class="w-16 h-16"
                  href="https://www.facebook.com/mongoliamindray"
                  ><ion-icon name="logo-facebook"></ion-icon></a
                >
                <a
                  class="w-16 h-16"
                  href="https://www.instagram.com/shinjyuku_llc?igsh=czgwMHlweDFqdXFu"
                  ><ion-icon name="logo-instagram"></ion-icon></a
                >
              </div>
            </li>
          </ul>
        </div>
        <!-- Google Map -->
        <div class="block_contact-page__map">
          <h2
            class="block_contact-page__subtitle text-xl font-semibold text-gray-700 mb-8"
          >
            Our Location
          </h2>
          <span class="block_contact-page__label font-medium text-gray-600"
            >Khan-Uul District, Chinggis Avenue-26, Ikh-Khuraldai office, 11
            floor â„–1104.<br />Ulaanbaatar, Mongolia</span
          >
          <div
            class="block_contact-page__map-frame w-full h-96 rounded-lg overflow-hidden mt-6"
          >
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d471.6519924841385!2d106.90891727322386!3d47.90087794359941!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5d9693949f904e09%3A0x8e910959931589b6!2s%22Ikh%20Khuraldai%22%20Business%20Center!5e1!3m2!1sen!2smn!4v1733282777583!5m2!1sen!2smn"
              width="600"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
