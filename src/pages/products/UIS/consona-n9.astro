<style>
  .slider__track-wrapper {
    @apply overflow-hidden w-full; /* Slider-ийн нийт өргөнийг тогтооно */
  }

  .slider__track {
    @apply flex; /* Slide-уудыг дарааллуулна */
  }

  .slider__slide {
    @apply w-full flex-shrink-0; /* Нэг слайд зөвхөн нэг дэлгэцэнд багтахаар тохируулна */
  }

  /* Add this to your Tailwind CSS config or global CSS if needed */
  .slider__control {
    @apply text-xl font-bold text-gray-700 cursor-pointer;
  }

  .slider__dot {
    @apply transition-colors duration-300 cursor-pointer;
  }

  .slider__dot-active {
    @apply bg-blue-500;
  }
</style>

<script>
  const sliderTrack = document.querySelector(".slider__track");
  const slides = document.querySelectorAll(".slider__slide");
  const dots = document.querySelectorAll(".slider__dot");
  const prevBtn = document.querySelector(".slider__control--prev");
  const nextBtn = document.querySelector(".slider__control--next");

  let currentIndex = 0;

  // Update slider
  function updateSlider(index: number) {
    const offset = -index * 100;
    (sliderTrack as HTMLElement).style.transform = `translateX(${offset}%)`;

    dots.forEach((dot, i) => {
      (dot as HTMLElement).classList.toggle("slider__dot-active", i === index);
    });
  }

  // Handle prev button
  prevBtn.addEventListener("click", () => {
    currentIndex = (currentIndex - 1 + slides.length) % slides.length;
    updateSlider(currentIndex);
  });

  // Handle next button
  nextBtn.addEventListener("click", () => {
    currentIndex = (currentIndex + 1) % slides.length;
    updateSlider(currentIndex);
  });

  // Handle dot click
  dots.forEach((dot) => {
    if (dot instanceof HTMLElement && dot.dataset.slide) {
      const currentIndex = parseInt(dot.dataset.slide);
      console.log(currentIndex);
    }
  });

  // Initialize slider
  updateSlider(currentIndex);
</script>
