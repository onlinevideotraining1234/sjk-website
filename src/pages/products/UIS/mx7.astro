<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sliderTrack = document.querySelector(".slider__track");
    const slides = document.querySelectorAll(".slider__slide");
    const dots = document.querySelectorAll(".slider__dot");
    const prevBtn = document.querySelector(".slider__control--prev");
    const nextBtn = document.querySelector(".slider__control--next");

    let currentIndex = 0;

    // Update slider to show the correct slide
    // Function to update the slider
    function updateSlider(index: number) {
      const offset = -index * 100;

      // Ensure sliderTrack is an HTMLElement
      if (sliderTrack instanceof HTMLElement) {
        sliderTrack.style.transform = `translateX(${offset}%)`;
      }

      // Update dot active state
      dots.forEach((dot, i) => {
        if (dot instanceof HTMLElement) {
          dot.classList.toggle("slider__dot-active", i === index);
        }
      });

      // Ensure prevBtn is an HTMLButtonElement
      if (prevBtn instanceof HTMLButtonElement) {
        prevBtn.disabled = index === 0;
      }

      // Ensure nextBtn is an HTMLButtonElement
      if (nextBtn instanceof HTMLButtonElement) {
        nextBtn.disabled = index === slides.length - 1;
      }
    }

    // Handle prev button click
    prevBtn.addEventListener("click", () => {
      if (currentIndex > 0) {
        currentIndex--; // Move to the previous slide
        updateSlider(currentIndex);
      }
    });

    // Handle next button click
    nextBtn.addEventListener("click", () => {
      if (currentIndex < slides.length - 1) {
        currentIndex++; // Move to the next slide
        updateSlider(currentIndex);
      }
    });

    // Handle dot click
    dots.forEach((dot) => {
      if (dot instanceof HTMLElement && dot.dataset.slide) {
        const currentIndex = parseInt(dot.dataset.slide);
        console.log(currentIndex);
      }
    });

    // Initialize slider
    updateSlider(currentIndex);
  });
</script>

