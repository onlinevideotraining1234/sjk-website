<style>
  .slider__track-wrapper {
    @apply overflow-hidden w-full; /* Slider-ийн нийт өргөнийг тогтооно */
  }

  .slider__track {
    @apply flex; /* Slide-уудыг дарааллуулна */
  }

  .slider__slide {
    @apply w-full flex-shrink-0; /* Нэг слайд зөвхөн нэг дэлгэцэнд багтахаар тохируулна */
  }

  /* Add this to your Tailwind CSS config or global CSS if needed */
  .slider__control {
    @apply text-xl font-bold text-gray-700 cursor-pointer;
  }

  .slider__dot {
    @apply transition-colors duration-300 cursor-pointer;
  }

  .slider__dot-active {
    @apply bg-blue-500;
  }

  .master-wrapper {
    width: 100%;
    position: relative;
  }

  .master-wrapper .master {
    width: 40%;
    position: relative;
  }

  .point-wrapper {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
  }

  .point {
    position: absolute;
    cursor: pointer;
    width: 2.5vw;
    height: 2.5vw;
    border-radius: 50%;
    background-color: #739dc2;
    border: 2px solid #fff;
    opacity: 0.73;
    transition: all 0.6s;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .point > span {
    display: none;
    color: #fff;
  }

  .point.active {
    background-color: #565656;
  }

  .point-content {
    width: 32%;
    padding: 2vw;
    position: absolute;
    border: 1px solid #595959;
    display: none;
    background-color: #ededed;
  }

  .point.active + .point-content {
    display: block;
